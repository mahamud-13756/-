<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fita_Calculator"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    android:padding="10dp">

    <EditText
        android:id="@+id/etAreaInput"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="জমির ক্ষেত্রফল দিন"
        android:textSize="20sp"
        android:ems="10"
        android:background="@drawable/edit_text_border"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:cursorVisible="true"
        android:textCursorDrawable="@drawable/cursor_color"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:inputType="numberDecimal"
        android:padding="10dp"/>

    <!-- First Calculation Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:weightSum="5"
        android:background="@color/teal_200">

        <TextView
            android:id="@+id/tvAreaInShotok1"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text=""
            android:textColor="@color/black"
            android:textSize="30dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/btnCalculateShotok1"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="শতক"
            android:textColor="@color/black"

            android:textSize="30dp"/>
    </LinearLayout>

    <!-- Second Calculation Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:weightSum="5"
        android:background="@drawable/circle_background">

        <TextView
            android:id="@+id/tvAreaInShotok2"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text=""
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/btnCalculateShotok3"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="শতক"
            android:textColor="@color/white"

            android:backgroundTint="#FFC107"
            android:textSize="30dp"/>
    </LinearLayout>

    <!-- Additional Layouts -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:weightSum="5"
        android:background="@color/lavender">

        <TextView
            android:id="@+id/tvAreaInShotok5"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text=""
            android:textColor="@color/black"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/btnCalculateShotok7"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="শতক"
            android:textColor="@color/black"
            android:textSize="30dp"/>
    </LinearLayout>

    <!-- Additional layouts can follow with unique IDs -->

</LinearLayout>
